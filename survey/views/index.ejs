<script>
  $(document).ready(function(){
    $("#createWallet").on("click",function(){
      $.ajax({
        type: "POST",
        url : '/createWallet',
        success: async function(r){
          if(r.status == true){
            console.log(r);
            console.log(r.data1)
            $("#privateKey").val(r.data1);
            $("#publicKey").val(r.data2);
            alert("wallet created check in on the top menu")
          }else{
            alert("error")
          }
        }
      })
    })
