    $("#register").on("click",function(){
      $.ajax({
        type: "POST",
        url : '/register',
        data : {
          'address' : $("#address").val(),
          'age' : $("#age").val(),
          'sex' : $("#sex").val(),
          'height' : $("#height").val(),
          'weight' : $("#weight").val(),
          'country' : $("#country").val()
        },
        success: async function(r){
          if(r.status == true){
              alert(r.msg)
            }else{
              alert(r.msg)
            }
        }
      })
    })
